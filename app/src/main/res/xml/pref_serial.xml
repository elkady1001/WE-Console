<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory android:title="Connection Speed">
        <androidx.preference.ListPreference
            android:key="baud_rate"
            android:title="Baud rate"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/baud_rates"
            android:entryValues="@array/baud_rates"
            android:defaultValue="9600" />

        <androidx.preference.EditTextPreference
            android:key="baud_rate_custom"
            android:title="Custom Baud Rate"
            android:summary="Enter speed manually (e.g. 9600)"
            app:useSimpleSummaryProvider="true" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="Serial Port Configuration">
        <androidx.preference.ListPreference
            android:key="data_bits"
            android:title="Data bits"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/data_bits"
            android:entryValues="@array/data_bits"
            android:defaultValue="8" />

        <androidx.preference.ListPreference
            android:key="parity"
            android:title="Parity"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/parity"
            android:entryValues="@array/parity_values"
            android:defaultValue="none" />

        <androidx.preference.ListPreference
            android:key="stop_bits"
            android:title="Stop bits"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/stop_bits"
            android:entryValues="@array/stop_bits"
            android:defaultValue="1" />

        <androidx.preference.ListPreference
            android:key="flow_control"
            android:title="Flow Control"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/flow_control_names"
            android:entryValues="@array/flow_control_values"
            android:defaultValue="none" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>