<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.ListPreference
        android:key="font_size"
        android:title="Font size"
        app:useSimpleSummaryProvider="true"
        android:entries="@array/font_sizes"
        android:entryValues="@array/font_sizes"
        android:defaultValue="14" />

    <androidx.preference.ListPreference
        android:key="charset"
        android:title="Charset"
        app:useSimpleSummaryProvider="true"
        android:entries="@array/charsets"
        android:entryValues="@array/charsets"
        android:defaultValue="UTF-8" />

    <androidx.preference.ListPreference
        android:key="display_mode"
        android:title="Display mode"
        app:useSimpleSummaryProvider="true"
        android:entries="@array/display_options"
        android:entryValues="@array/display_values"
        android:defaultValue="terminal" />
</androidx.preference.PreferenceScreen>